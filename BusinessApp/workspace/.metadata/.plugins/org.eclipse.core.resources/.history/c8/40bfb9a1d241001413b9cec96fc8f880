container_commands: 00_modify_elasticbeanstalk_conf: command: sed -i '/Rewrite*/d' /etc/httpd/conf.d/elasticbeanstalk.conf 01_modify_elasticbeanstalk_conf: command: sed -i '/<\/VirtualHost>/i \ \n\ RewriteEngine On \n\ RewriteCond %{HTTP:X-Forwarded-Proto} !https \n\ RewriteRule ^.*$ https://%{SERVER_NAME}%{REQUEST_URI}' /etc/httpd/conf.d/elasticbeanstalk.conf 02_reload_apache_config: command: /sbin/service httpd reload